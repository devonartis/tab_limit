{
    "manifest_version": 3,
    "name": "Tab Limit Manager",
    "version": "1.2",
    "description": "Manages the number of open tabs in Chrome with warnings",
    "permissions": ["tabs", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    }
  }